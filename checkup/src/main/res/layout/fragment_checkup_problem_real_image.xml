<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewRectangleOne"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rectangle_4979"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewRectangleTwo"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rectangle_4977"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageViewRectangleThree"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:src="@drawable/ic_border_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/layoutRealImage"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewRealImageXray"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:maxHeight="262dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/imageViewRealImage"
            android:layout_width="262dp"
            android:layout_height="262dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBackground"
        android:layout_width="262dp"
        android:layout_height="262dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>